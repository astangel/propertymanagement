<h1>Listing units</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Square feet</th>
    <th>Property</th>
    <th><% if can? :manage, :all %>Renters<%end%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.name %></td>
    <td><%= unit.square_feet %></td>
    <td><%= unit.property.name%></td>
    <% if can? :manage, :all %>
    <td><% unit.renters.each do |c| %>
      <li><%=c.username%></li>
    <% end %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, confirm: 'Are you sure?', method: :delete %></td>
    <%else%>
    <td /><td /><td /><td />
    <%end%>
  </tr>
<% end %>
</table>

<br />

<% if can? :manage, :all %><%= link_to 'New Unit', new_unit_path %><%end%>
