<!DOCTYPE html>
<html>
<head>
  <title>Propertymanagement</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Begin Wrapper -->
<div id="wrapper">

  <!-- Begin Header -->
  <div id="header">
    <% if current_user %>
    <p style="float:right;">Welcome, <%=current_user.username%></p>
    <%end%>
    <h1 style="font-size:2.85em; padding:0px; margin:.25em .0px  0px .75em;">Property Manager Express</h1>
    <h4 style="font-style:italic; margin-left:18.25em; margin-top:0px; ">...The most trusted name in leasing</h4>


  </div>
  <!-- End Header -->

  <!-- Begin Naviagtion -->
  <div id="navigation">
    <div id="home"><a href="/">Home</a></div>
    <div><%= link_to 'Users', users_path %></div>
    <div><%= link_to 'Units', units_path %></div>
    <div><%= link_to 'Properties', properties_path %></div>
    <% if current_user %><% if can? :read, current_user %><div><%= link_to 'Repair Requests', repair_requests_path %></div>
    <div><%= link_to 'Leases', leases_path %></div><%end%><%end%>

    	  <% if current_user %>
        <div id="login">	
        	
    	  	<%= link_to "Edit Profile", edit_user_path(current_user) %>
    	</div>
    	<div id="logout">
    	 	 <%= link_to "Logout", logout_path %>
    	</div>
    	  <% else %>
    	<div id="register">
    		<%= link_to "Register", new_user_path %>
       </div>
        <div id="login">
    		<%= link_to "Login", login_path %>
    </div>
    	  <% end %>


  </div>
  <!-- End Naviagtion -->

  <!-- Begin Content -->
  <div id="content">

    <% if flash[:error] -%>
        <div id='error'><%=h flash[:error] %></div>
    <% end -%>
    <% if flash[:notice] -%>
        <div id='notice'><%=h flash[:notice] %></div>
    <% end -%>
    
<%= yield %>


  </div>
  <!-- End Content -->

  <!-- Begin Footer -->
  <div id="footer">

    This is the Footer

  </div>
  <!-- End Footer -->

</div>
<!-- End Wrapper -->

</body>
</html>

