<h1>Listing payments</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Ip address</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Card expires on</th>
    <th>User</th>
    <th>Lease</th>
    <th></th>

  </tr>
<% str = (can? :manage, :all)?'@payments':'@approved_payments' %>
<% eval(str).each do |payment| %>
  <tr>
    <td><%= payment.amount %></td>
    <td><%= payment.ip_address %></td>
    <td><%= payment.first_name %></td>
    <td><%= payment.last_name %></td>
    <td><%= payment.card_expires_on %></td>
    <td><%= payment.user.username %></td>
    <td><%= payment.lease.unit.prop_unit %></td>
    <td><%= link_to 'Show', payment %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Payment', new_payment_path %>
